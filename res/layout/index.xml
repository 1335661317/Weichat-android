<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/breakk"
    android:padding="10dp" >

    <Button
        android1:id="@+id/start"
        android1:layout_width="200dp"
        android1:layout_height="100dp"
        android1:layout_below="@+id/textView1"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="31dp"
        android1:textColor="#f9f900"
        android1:text="开始聊天" />

    <Button
        android1:id="@+id/zhuye"
        android1:layout_width="200dp"
        android1:layout_height="100dp"
        android1:layout_alignLeft="@+id/start"
        android1:layout_below="@+id/start"
        android1:text="访问主页"
        android1:textColor="#f9f900" />

    <Button
        android1:id="@+id/guanyu1"
        android1:layout_width="200dp"
        android1:layout_height="100dp"
        android1:layout_alignLeft="@+id/zhuye"
        android1:layout_below="@+id/zhuye"
        android1:text="关于我们"
        android1:textColor="#f9f900" />

    <TextView
        android1:id="@+id/textView2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_centerHorizontal="true"
        android1:layout_marginBottom="10dp"
        android1:text="失败的人只有一种，就是在抵达成功之前放弃的人！"
        android1:textColor="#ffff"
        android1:textSize="14sp" />

    <DigitalClock
        android1:id="@+id/digitalClock1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView2"
        android1:layout_alignRight="@+id/textView2"
        android1:layout_marginRight="20dp"
        android1:layout_marginBottom="10dp"
        android1:text="现在时间"
        android1:textColor="#ffff"
        android1:textSize="28sp" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="64dp"
        android1:text="聊 天 吧"
        android1:textColor="#ffff"
        android1:textSize="40sp" />

</RelativeLayout>